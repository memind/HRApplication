@model RegisterVM

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h2 class="card-header">Register </h2>
                <form asp-controller="Account" asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="card-body">
                        <h4>Personal Info</h4>

                        <div class="form-group">
                            <label asp-for="UserName" class="form-label">Name</label><br />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                            <input asp-for="UserName" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Enter Your Name" aria-describedby="defaultFormControlHelp">
                        </div>

                        <div class="form-group">
                            <label asp-for="UserSecondName" class="form-label">Second Name</label><br />
                            <span asp-validation-for="UserSecondName" class="text-danger"></span>
                            <input asp-for="UserSecondName" type="email" class="form-control mb-3" id="defaultFormControlInput" placeholder="Enter Your Second Name" aria-describedby="defaultFormControlHelp">
                        </div>

                        <div class="form-group">
                            <label asp-for="UserSurname" class="form-label">Surname</label><br />
                            <span asp-validation-for="UserSurname" class="text-danger"></span>
                            <input asp-for="UserSurname" type="tel" class="form-control mb-3" id="defaultFormControlInput" placeholder="Enter Your Surname" aria-describedby="defaultFormControlHelp">
                        </div>

                        <div class="form-group">
                            <label asp-for="UserTitle" class="form-label">Title</label><br />
                            <span asp-validation-for="UserTitle" class="text-danger"></span>
                            <input asp-for="UserTitle" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Enter Your Title" aria-describedby="defaultFormControlHelp">
                        </div>

                        <div class="form-group">
                            <label asp-for="UserBloodGroup" class="form-label">Blood Group</label><br />
                            <span asp-validation-for="UserBloodGroup" class="text-danger"></span>
                            <input asp-for="UserBloodGroup" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Enter Your Blood Group" aria-describedby="defaultFormControlHelp">
                        </div>

                        <div class="form-group">
                            <label asp-for="UserProfession" class="form-label">Profession</label><br />
                            <span asp-validation-for="UserProfession" class="text-danger"></span>
                            <input asp-for="UserProfession" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Enter Your Profession" aria-describedby="defaultFormControlHelp">
                        </div>

                        <div class="form-group">
                            <label asp-for="UserBirthDate" class="form-label">Birth Date</label><br />
                            <span asp-validation-for="UserBirthDate" class="text-danger"></span>
                            <input asp-for="UserBirthDate" type="date" class="form-control mb-3" id="defaultFormControlInput" aria-describedby="defaultFormControlHelp">
                        </div>

                        <div class="form-group">
                            <label asp-for="UserIdentityId" class="form-label">Identity Id</label><br />
                            <span asp-validation-for="UserIdentityId" class="text-danger"></span>
                            <input asp-for="UserIdentityId" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Enter Your Identity ID" aria-describedby="defaultFormControlHelp">
                        </div>

                        <div class="form-group">
                            <label asp-for="UserEmail" class="form-label">Email</label><br />
                            <span asp-validation-for="UserEmail" class="text-danger"></span>
                            <input asp-for="UserEmail" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Enter Your Email" aria-describedby="defaultFormControlHelp">
                        </div>

                        <div class="form-group">
                            <label asp-for="UserPassword" class="form-label">Password</label><br />
                            <span asp-validation-for="UserPassword" class="text-danger"></span>
                            <input asp-for="UserPassword" type="password" class="form-control mb-3" id="defaultFormControlInput" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" aria-describedby="defaultFormControlHelp">
                        </div>

                        <div class="form-group">
                            <label asp-for="UserConfirmPassword" class="form-label">Confirm Your Password</label><br />
                            <span asp-validation-for="UserConfirmPassword" class="text-danger"></span>
                            <input asp-for="UserConfirmPassword" type="password" class="form-control mb-3" id="defaultFormControlInput" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" aria-describedby="defaultFormControlHelp">
                        </div>
                    </div>

                    <div class="card-body">
                        <h4>Company Info</h4>

                        <div class="form-group">
                            <label asp-for="CompanyName" class="form-label">Company Name</label><br />
                            <span asp-validation-for="CompanyName" class="text-danger"></span>
                            <input asp-for="CompanyName" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Enter Company Name" aria-describedby="defaultFormControlHelp">
                        </div>

                        <div class="form-group">
                            <label asp-for="CompanyEmail" class="form-label">Company Email</label><br />
                            <span asp-validation-for="CompanyEmail" class="text-danger"></span>
                            <input asp-for="CompanyEmail" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Enter Company Email" aria-describedby="defaultFormControlHelp">
                        </div>

                        <div class="form-group">
                            <label asp-for="CompanyPhoneNumber" class="form-label">Company Phone Number</label><br />
                            <span asp-validation-for="CompanyPhoneNumber" class="text-danger"></span>
                            <input asp-for="CompanyPhoneNumber" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Enter Company Phone Number" aria-describedby="defaultFormControlHelp">
                        </div>

                        <div class="form-group">
                            <label asp-for="CompanyNumberOfEmployees" class="form-label">Number of Employees</label><br />
                            <span asp-validation-for="CompanyNumberOfEmployees" class="text-danger"></span>
                            <input asp-for="CompanyNumberOfEmployees" type="number" class="form-control mb-3" id="defaultFormControlInput" placeholder="Enter Number of Employees" aria-describedby="defaultFormControlHelp">
                        </div>    
                        
                        <div class="form-group">
                            <label asp-for="CompanySectorId">Sector</label><br />
                            <span asp-validation-for="CompanySectorId" class="text-danger"></span>
                            <select class="form-control mb-3" asp-for="CompanySectorId" asp-items="@(new SelectList(Model.SectorList,"Id","Name"))"></select>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-block">Register</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>