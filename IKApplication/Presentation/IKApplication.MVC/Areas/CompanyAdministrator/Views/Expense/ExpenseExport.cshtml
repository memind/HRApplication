@model ExcelDateVM
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Export Expenses to Excel</h4>
        <div class="row">
            <div class="col-12">
                <div class="table-responsive">
                    <form method="post">
                        <div class="card-body">
                            <p class="card-description">In which date range would you like to see the expenses made?</p>
                            <div class="input-group input-daterange d-flex align-items-center">

                                <input asp-for="Start" type="date" class="form-control">

                                <div class="input-group-addon mx-4">to</div>

                                <input asp-for="End" type="date" class="form-control">
                            </div>
                        </div>
                        <div class="form-group mx-4">
                            <button type="submit" class="btn btn-outline-primary btn-block" asp-controller="Expense" asp-action="ExpenseExcel" formtarget="_blank">Export to Excel</button>
                            <button type="submit" class="btn btn-outline-primary btn-block" asp-controller="Expense" asp-action="ExpensePDF" formtarget="_blank">Export to PDF</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <a asp-controller="Expense" asp-action="Index" class="ms-4 mb-2 mt-0">
        <button class="btn btn-outline-info">Back to List</button>
    </a>
</div>