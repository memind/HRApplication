@model AppUserUpdateDTO

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Manage User </span>
    </h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header">Update User</h5>
                <form asp-controller="User" asp-action="Update" method="post">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="card-body">
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group">
                            <label asp-for="Name" class="form-label">Name</label><br />
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <input asp-for="Name" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Enter Name" aria-describedby="defaultFormControlHelp">
                        </div>

                        <div class="form-group">
                            <label asp-for="SecondName" class="form-label">Second Name</label><br />
                            <span asp-validation-for="SecondName" class="text-danger"></span>
                            <input asp-for="SecondName" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Enter Second Name" aria-describedby="defaultFormControlHelp">
                        </div>

                        <div class="form-group">
                            <label asp-for="Surname" class="form-label">Surname</label><br />
                            <span asp-validation-for="Surname" class="text-danger"></span>
                            <input asp-for="Surname" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Enter Surname" aria-describedby="defaultFormControlHelp">
                        </div>

                        <div class="form-group">
                            <label asp-for="Title" class="form-label">Title</label><br />
                            <span asp-validation-for="Title" class="text-danger"></span>
                            <input asp-for="Title" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Enter Title" aria-describedby="defaultFormControlHelp">
                        </div>

                        <div class="form-group">
                            <label asp-for="BloodGroup" class="form-label">Blood Group</label><br />
                            <span asp-validation-for="BloodGroup" class="text-danger"></span>
                            <input asp-for="BloodGroup" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Enter Blood Group" aria-describedby="defaultFormControlHelp">
                        </div>

                        <div class="form-group">
                            <label asp-for="Profession" class="form-label">Profession</label><br />
                            <span asp-validation-for="Profession" class="text-danger"></span>
                            <input asp-for="Profession" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Enter Profession" aria-describedby="defaultFormControlHelp">
                        </div>

                        <div class="form-group">
                            <label asp-for="Email" class="form-label">Admin Email</label><br />
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <input asp-for="Email" type="email" class="form-control mb-3" id="defaultFormControlInput" placeholder="Enter Email" aria-describedby="defaultFormControlHelp">
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Update User</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>