@model LeaveVM

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header">Leave Details</h5>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="Status" />
                            <input type="hidden" asp-for="CreateDate" />
                            <input type="hidden" asp-for="UpdateDate" />

                            <div class="form-group">
                                <label asp-for="PersonalFullName" class="form-label">Personal Name</label><br />
                                <input asp-for="PersonalFullName" type="text" class="form-control mb-3" disabled>
                            </div>

                            <div class="form-group">
                                <label asp-for="StartDate" class="form-label">Start Date</label><br />
                                <input asp-for="StartDate" type="date" class="form-control mb-3" disabled>
                            </div>

                            <div class="form-group">
                                <label asp-for="EndDate" class="form-label">End Date</label><br />
                                <input asp-for="EndDate" type="date" class="form-control mb-3" disabled>
                            </div>

                            <div class="form-group">
                                <label asp-for="Explanation" class="form-label">Explanation</label><br />
                                <input asp-for="Explanation" type="text" class="form-control mb-3" disabled>
                            </div>

                            <div class="form-group">
                                <label asp-for="LeaveTypes">Leave Type</label><br />
                                <select class="form-control mb-3 auth-form-dark" asp-for="LeaveTypes" asp-items="@Html.GetEnumSelectList<LeaveType>()" disabled></select>
                            </div>

                        </div>

                    </div>
                    <a asp-controller="Leave" asp-action="AcceptLeave" asp-route-id="@Model.Id">
                        <button class="btn btn-outline-primary">Accept Leave</button>
                    </a>
                    <a asp-controller="Leave" asp-action="RefuseLeave" asp-route-id="@Model.Id">
                        <button class="btn btn-outline-danger">Refuse Leave</button>
                    </a>
                    <a asp-controller="Leave" asp-action="LeaveRequests">
                        <button class="btn btn-outline-info">Back to List</button>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>