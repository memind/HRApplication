@model LeaveVM

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header">Leave Details</h5>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="Status" />
                            <input type="hidden" asp-for="CreateDate" />
                            <input type="hidden" asp-for="UpdateDate" />
                            <input type="hidden" asp-for="CompanyId" />

                            <div class="form-group">
                                <label asp-for="PersonalFullName" class="form-label">Personal Name</label><br />
                                <input asp-for="PersonalFullName" type="text" class="form-control mb-3" disabled style="background-color: #7f7f7f; color: #000000; font-weight: 450;">
                            </div>

                            <div class="form-group">
                                <label asp-for="StartDate" class="form-label">Start Date</label><br />
                                <input asp-for="StartDate" type="date" class="form-control mb-3" disabled style="background-color: #7f7f7f; color: #000000; font-weight: 450;">
                            </div>

                            <div class="form-group">
                                <label asp-for="EndDate" class="form-label">End Date</label><br />
                                <input asp-for="EndDate" type="date" class="form-control mb-3" disabled style="background-color: #7f7f7f; color: #000000; font-weight: 450;">
                            </div>

                            <div class="form-group">
                                <label asp-for="Explanation" class="form-label">Explanation</label><br />
                                <input asp-for="Explanation" type="text" class="form-control mb-3" disabled style="background-color: #7f7f7f; color: #000000; font-weight: 450;">
                            </div>

                            <div class="form-group">
                                <label asp-for="TotalLeaveDays" class="form-label">Total Leave Days</label><br />
                                <input asp-for="TotalLeaveDays" type="text" class="form-control mb-3" disabled style="background-color: #7f7f7f; color: #000000; font-weight: 450;">
                            </div>

                            <div class="form-group">
                                <label asp-for="LeaveType">Leave Type</label><br />
                                <select class="form-control mb-3 auth-form-dark" asp-for="LeaveType" asp-items="@Html.GetEnumSelectList<LeaveType>()" disabled style="background-color: #7f7f7f; color: #000000; font-weight: 450;"></select>
                            </div>

                        </div>

                    </div>
                    <div class="form-group d-flex justify-content-between">
                        <a asp-controller="Leave" asp-action="AcceptLeave" asp-route-id="@Model.Id" data-bs-toggle="modal" data-bs-target="#acceptModal">
                            <button class="btn btn-outline-primary">Accept Leave</button>
                        </a>
                        <a asp-controller="Leave" asp-action="RefuseLeave" asp-route-id="@Model.Id" data-bs-toggle="modal" data-bs-target="#refuseModal">
                            <button class="btn btn-outline-danger">Refuse Leave</button>
                        </a>
                        <a asp-controller="Leave" asp-action="LeaveRequests">
                            <button class="btn btn-outline-info">Back to List</button>
                        </a>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="acceptModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Accept a Leave</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure that you want to accept this leave?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-primary" data-bs-dismiss="modal">No</button>

                <a asp-controller="Leave" asp-action="AcceptLeave" asp-route-id="@Model.Id">
                    <button data-bs-toggle="modal" data-bs-target="#acceptModal" class="btn btn-outline-success">Yes</button>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="refuseModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Refuse a Leave</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure that you want to refuse this leave?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-primary" data-bs-dismiss="modal">No</button>

                <a asp-controller="Leave" asp-action="RefuseLeave" asp-route-id="@Model.Id">
                    <button data-bs-toggle="modal" data-bs-target="#refuseModal" class="btn btn-outline-danger">Yes</button>
                </a>
            </div>
        </div>
    </div>
</div>