@model CompanyCreateDTO

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Manage Companies /</span> Create Company
    </h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header">Create Company</h5>
                <form asp-controller="Company" asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="card-body">

                        <div class="form-group">
                            <label asp-for="Name" class="form-label">Name</label><br />
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <input asp-for="Name" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Enter Company Name" aria-describedby="defaultFormControlHelp">
                        </div>

                        <div class="form-group">
                            <label asp-for="Email" class="form-label">Email</label><br />
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <input asp-for="Email" type="email" class="form-control mb-3" id="defaultFormControlInput" placeholder="Enter Company Email" aria-describedby="defaultFormControlHelp">
                        </div>

                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="form-label">Phone Number</label><br />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            <input asp-for="PhoneNumber" type="tel" class="form-control mb-3" id="defaultFormControlInput" placeholder="Enter Company Phone Number" aria-describedby="defaultFormControlHelp">
                        </div>

                        <div class="form-group">
                            <label asp-for="Sector" class="form-label">Sector</label><br />
                            <span asp-validation-for="Sector" class="text-danger"></span>
                            <input asp-for="Sector" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Enter Company Sector" aria-describedby="defaultFormControlHelp">
                        </div>

                        <div class="form-group">
                            <label asp-for="NumberOfEmployees" class="form-label">Number Of Employees</label><br />
                            <span asp-validation-for="NumberOfEmployees" class="text-danger"></span>
                            <input asp-for="NumberOfEmployees" type="number" class="form-control mb-3" id="defaultFormControlInput" placeholder="Enter Number of Employees" aria-describedby="defaultFormControlHelp">
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Create Company</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>